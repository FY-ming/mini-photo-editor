<?xml version="1.0" encoding="utf-8"?>
<!-- 整个应用的主导航图（Navigation Graph） ，用于存放应用的基本界面-->
<!-- app:startDestination="@id/homeFragment"：启动目的地：应用打开后默认进入哪个 Fragment -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- 首页（对应 BottomNavigationView 的 homeFragment 菜单） -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mini_photo_editor.ui.home.HomeFragment"
        android:label="首页"
        tools:layout="@layout/fragment_home">

    </fragment>

    <!-- 其他功能页 -->
    <fragment
        android:id="@+id/otherFragment"
        android:name="com.example.mini_photo_editor.ui.other.OtherFragment"
        android:label="其他"
        tools:layout="@layout/fragment_other" />

    <!-- 我的页面 -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mini_photo_editor.ui.profile.ProfileFragment"
        android:label="我的"
        tools:layout="@layout/fragment_profile" />

</navigation>